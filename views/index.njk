{% extends "template.njk" %}

{% block head %}
  <title>Foodfy</title>
  <link rel="stylesheet" href="/css/banner.css"/>
  <link rel="stylesheet" href="/css/cards-container.css"/>
  <link rel="stylesheet" href="/css/modal.css"/>
{% endblock %}

{% block content %}
  <div class="main-banner">
    <div class="content">
      <h1 class="title">As melhores receitas</h1>
      <p class="paragraph">
        Aprenda a construir os melhores pratos com receitas criadas por profissionais do mundo inteiro.
      </p>
    </div>
    <img src="/assets/chef.png" alt=""/>
  </div>

  <section class="cards-container">
    <h2>Mais acessadas</h2>

    <article class="card">
      <img src="/assets/burger.png" alt="foto do hamburguer"/>
      <div class="content">
        <h3 class="title">Tripo bacon burger</h3>
        <p class="chef">por Jorge Relato</p>
      </div>
    </article>

    <article class="card">
      <img src="/assets/pizza.png" alt="foto da pizza"/>
      <div class="content">
        <h3 class="title">Pizza 4 estações</h3>
        <p class="chef">por Fabiana Melo</p>
      </div>
    </article>

    <article class="card">
      <img src="/assets/espaguete.png" alt="foto do espaguete"/>
      <div class="content">
        <h3 class="title">Espaguete ao alho</h3>
        <p class="chef">por Júlia Kinoto</p>
      </div>
    </article>

    <article class="card">
      <img src="/assets/lasanha.png" alt="foto da lasanha"/>
      <div class="content">
        <h3 class="title">Lasanha mac n' cheese</h3>
        <p class="chef">por Juliano Vieira</p>
      </div>
    </article>

    <article class="card">
      <img src="/assets/doce.png" alt="foto dos doces"/>
      <div class="content">
        <h3 class="title">Docinhos pão-do-céu</h3>
        <p class="chef">por Ricardo Golvea</p>
      </div>
    </article>

    <article class="card">
      <img src="/assets/asinhas.png" alt="fotos das asinhas"/>
      <div class="content">
        <h3 class="title">Asinhas de frango ao barbecue</h3>
        <p class="chef">por Vania Steroski</p>
      </div>
    </article>
  </section>

{% endblock %}